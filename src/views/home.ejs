<!-- src/views/home.ejs -->
<!DOCTYPE html>
<html>
<head><title>Students</title>
    <link rel="stylesheet" href="/styles.css" />

</head>
<body>
    <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Class</th>
            <th>Mark</th>
            <th>Grade</th>
            <th>Roll No</th>
          </tr>
        </thead>
        <tbody>
          <% students.forEach(s => { %>
            <tr>
              <td><%= s.name %></td>
              <td><%= s.class %></td>
              <td><%= s.mark %></td>
              <td><%= s.grade %></td>
              <td><%= s.rollno %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
      
  <a href="/admin">Go to Admin</a>
</body>
</html>
